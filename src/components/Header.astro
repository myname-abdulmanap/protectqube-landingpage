---
import ThemeToggle from "./ThemeToggle.astro";
---

<style>
  /* Header & Navigation */
  header {
    position: fixed;
    width: 100%;
    z-index: 1000;
    transition: all 0.5s ease;
  }

  header.transparent {
    background: transparent;
    box-shadow: none;
  }

  header.white {
    background: var(--bg-color);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
  }

  .nav-container {
    max-width: 100%;
    margin: 0 auto;
    padding: 1.25rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .navbar-icons {
    display: flex;
    align-items: center;
  }

  .navbar-icons .icon {
    margin-left: 20px;
    font-size: medium;
    color: #000000;
    background-color: rgb(244, 230, 181);
    transition: color 0.3s ease;
    padding: 2px;
    /* Mengurangi padding untuk lebih ramping */
    border-radius: 10px;
  }

  .navbar-icons .icon:hover {
    color: #0073e6;
  }

  .logo a {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: var(--text-header);
    font-weight: 700;
    font-size: 1.2rem;
    transition: color 0.3s;
  }

  .logo h2 {
    font-size: 1.7rem;
  }

  .logo a:hover {
    color: var(--primary);
  }

  header.white .logo a:hover {
    color: var(--color-bar);
  }

  header.transparent .logo a:hover {
    color: var(--color-bar);
  }

  header.white .logo a {
    color: var(--text-color);
  }

  header.white .logo h2:hover {
    color: var(--color-bar);
  }

  header.transparent .logo h2 {
    color: var(--text-header);
  }
  header.transparent .logo h2:hover {
    color: var(--color-bar);
  }

  header.white .logo h2 {
    color: var(--text-color);
  }

  .menu ul {
    display: flex;
    gap: 2.5rem;
    list-style: none;
  }

  .menu a {
    text-decoration: none;
    color: var(--text-color);
    font-weight: bold;
    transition: color 0.3s;
    font-size: 1.1rem;
  }

  header.white .menu a {
    color: var(--text-color);
  }

  header.transparent .menu a {
    color: var(--light);
  }

  header.transparent .menu a:hover {
    color: var(--color-bar);
  }

  header.white .menu a:hover {
    color: var(--color-bar);
  }

  header:hover {
    color: var(--color-bar);
  }

  .menu a:hover {
    color: var(--primary);
  }

  .bar {
    display: block;
    width: 27px;
    height: 6px;
    margin: 3px;
    background-color: rgb(244, 230, 181);
    transition: 0.3s;
  }

  header.white .bar {
    background-color: rgb(229, 207, 129);
  }

  .hamburger {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 1001;
    padding: 15px;
  }

  .overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    opacity: 0;
    visibility: hidden;
    transition: 0.3s;
    pointer-events: none;
  }

  @keyframes gradientMove {
    0% {
      background-position: 0% 50%;
    }

    50% {
      background-position: 100% 50%;
    }

    100% {
      background-position: 0% 50%;
    }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .logo a {
      font-size: 0.8rem;
    }

    .logo h2 {
      font-size: 1.2rem;
    }

    .features-grid {
      grid-template-columns: 1fr;
    }

    .cta h2 {
      font-size: 2rem;
    }

    .pricing-grid,
    .testimonials-grid,
    .footer-grid {
      grid-template-columns: 1fr;
    }

    .pricing-card.popular {
      transform: translateY(0);
    }

    .form-grid {
      grid-template-columns: 1fr;
    }

    .hamburger {
      display: block;
    }

    .overlay {
      display: block;
    }

    .overlay.active {
      opacity: 1;
      visibility: visible;
      pointer-events: auto;
    }

    .menu {
      position: fixed;
      top: 0;
      left: -280px;
      height: 100vh;
      width: 280px;
      background: var(--bg-color);
      padding: 2rem;
      transition: left 0.3s ease;
      box-shadow: -2px 0 10px rgba(0, 0, 0, 0.1);
    }

    header.transparent .menu a {
      color: var(--text-color);
    }

    .menu.active {
      left: 0;
    }

    .menu ul {
      flex-direction: column;
      gap: 1rem;
    }

    .menu a {
      color: #333;
      font-size: 1.1rem;
      display: block;
      padding: 0.5rem 0;
    }

    .hamburger.active .bar:nth-child(1) {
      transform: rotate(-45deg) translate(-5px, 6px);
    }

    .hamburger.active .bar:nth-child(2) {
      opacity: 0;
    }

    .hamburger.active .bar:nth-child(3) {
      transform: rotate(45deg) translate(-5px, -6px);
    }

    .hero h1 {
      font-size: 2.5rem;
    }
  }
</style>
