---
import ThemeToggle from "./ThemeToggle.astro";
---

<style>
header {
    position: fixed;
    width: 100%;
    z-index: 1000;
    transition: all 0.5s ease;
  }

  header.transparent {
    background: transparent;
    box-shadow: none;
  }

  header.white {
    background: var(--bg-color);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
  }

  .nav-container {
    max-width: 100%;
    margin: 0 auto;
    padding: 1.25rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  

  .logo a {
  position: relative;
  display: inline-block;
  width: 100px;
  height: 50px;
  overflow: visible; /* biarkan gambar bisa keluar dari container */
}

.logo-img {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 150px; /* ukuran gambar lebih besar dari container */
  height: auto;
  transform: translate(-50%, -50%);
  transition: opacity 0.3s ease;
  pointer-events: none;
}

.logo-white {
  opacity: 0;
  filter: brightness(0) invert(1); /* ubah ke putih */
}

header.transparent .logo-white {
  opacity: 1;
}

header.transparent .logo-dark {
  opacity: 0;
}




  .menu ul {
    display: flex;
    gap: 2.5rem;
    list-style: none;
  }

  .menu a {
    text-decoration: none;
    color: var(--text-bar);
    font-weight: bold;
    transition: color 0.3s;
    font-size: 1.1rem;
  }

  header.white .menu a {
    color: var(--text-color);
  }

  /* header.transparent .menu a {
    color: var(--text-color);
  } */

  .navbar-icons {
    display: flex;
    align-items: center;
  }

  .navbar-icons .icon {
    margin-left: 20px;
    font-size: medium;
    background-color: var(--bg-color);
    padding: 2px;
    border-radius: 10px;
  }

  .bar {
    display: block;
    width: 27px;
    height: 6px;
    margin: 3px;
    background-color: var(--text-bar);
    transition: 0.3s;
  
  }

  header.white .bar {
    background-color: var(--text-color);
  }

  .hamburger {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 1001;
    padding: 15px;
  }

  @media (max-width: 768px) {
    .hamburger {
      display: block;
    }

    .menu {
      position: fixed;
      top: 0;
      left: -280px;
      height: 100vh;
      width: 280px;
      background: var(--bg-color);
      padding: 2rem;
      transition: left 0.3s ease;
    }

      header.transparent .menu a {
    color: var(--text-color);
  }

    .menu.active {
      left: 0;
    }

    .menu ul {
      flex-direction: column;
      gap: 1rem;
    }

    .hamburger.active .bar:nth-child(1) {
      transform: rotate(-45deg) translate(-5px, 6px);
    }

    .hamburger.active .bar:nth-child(2) {
      opacity: 0;
    }

    .hamburger.active .bar:nth-child(3) {
      transform: rotate(45deg) translate(-5px, -6px);
    }
  }
</style>
