<script>
  // Intersection Observer for Animation
  document.addEventListener('DOMContentLoaded', () => {
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate');
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.1 });

    // Observe all elements with animate-element class
    document.querySelectorAll('.animate-element').forEach((element) => {
      observer.observe(element);
    });

    // Product image hover effect
    const hexagons = document.querySelectorAll('.image-hexagon');
    hexagons.forEach((hex) => {
      hex.addEventListener('mouseenter', () => {
        hex.classList.add('hex-hover');
      });
      hex.addEventListener('mouseleave', () => {
        hex.classList.remove('hex-hover');
      });
    });
  });
</script>

<style>
  .product-showcase {
    padding: 7rem 0;
    background: var(--bg-color, #f8fafc);
    overflow: hidden;
    position: relative;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .product-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
    margin-bottom: 8rem;
  }

  .excellence-section {
    position: relative;
    z-index: 2;
  }

  .excellence-section h2 {
    font-size: 2.8rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: var(--text-color, #111827);
    line-height: 1.2;
    background: var(--primary-color, #3b82f6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .excellence-section p {
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--text-color, #4b5563);
    margin-bottom: 1.5rem;
  }

  .cta-button {
    display: inline-block;
    background: linear-gradient(to right, #f97316, #ea580c);
    color: white;
    font-weight: 600;
    padding: 0.85rem 1.75rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-size: 1rem;
    letter-spacing: 0.05em;
    transition: all 0.3s ease;
    box-shadow: 0 10px 15px -3px rgba(249, 115, 22, 0.2);
    position: relative;
    overflow: hidden;
    z-index: 1;
    margin-top: 1rem;
    border: none;
    cursor: pointer;
  }

  .cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 20px -3px rgba(249, 115, 22, 0.4);
  }

  .cta-button:active {
    transform: translateY(1px);
  }

  .cta-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to right, #ea580c, #f97316);
    z-index: -1;
    transition: opacity 0.3s ease;
    opacity: 0;
  }

  .cta-button:hover::before {
    opacity: 1;
  }

  .product-images {
    position: relative;
  }

  .image-grid {
    display: grid;
    grid-template-areas:
      "hex1 hex2"
      "hex3 hex2";
    gap: 1.5rem;
    transform: translateX(5%);
  }

  .image-hexagon {
    position: relative;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    cursor: pointer;
    clip-path: polygon(50% 0%, 100% 25%, 100% 75%, 50% 100%, 0% 75%, 0% 25%);
  }

  .hex-1 {
    grid-area: hex1;
  }

  .hex-2 {
    grid-area: hex2;
    margin-top: -2rem;
  }

  .hex-3 {
    grid-area: hex3;
  }

  .hex-hover {
    transform: scale(1.05);
    z-index: 5;
  }

  .product-image {
    width: 100%;
    height: 90%;
    object-fit: cover;
    border-radius: 10px;
    transition: all 0.5s ease;
  }

  /* Use Case Section */
  .use-case-section {
    margin-top: 2rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-header h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--heading-color, #111827);
    position: relative;
    display: inline-block;
  }

  .section-header h2::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 3px;
    background: linear-gradient(to right, #3b82f6, #2563eb);
    border-radius: 3px;
  }

  .section-header p {
    font-size: 1.2rem;
    color: var(--text-color, #4b5563);
    max-width: 700px;
    margin: 1.5rem auto 0;
  }

  .use-case-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .use-case-list ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .use-case-list li {
    display: flex;
    align-items: center;
    margin-bottom: 1.5rem;
    padding: 1rem 1.5rem;
    background: white;
    border-radius: 0.75rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    border-left: 4px solid #3b82f6;
  }

  .use-case-list li:hover {
    transform: translateX(5px);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  }

  .use-case-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(to right, #3b82f6, #2563eb);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 1rem;
    flex-shrink: 0;
  }

  .use-case-icon svg {
    width: 20px;
    height: 20px;
    color: white;
  }

  .use-case-list li span {
    font-weight: 600;
    color: var(--heading-color, #111827);
    font-size: 1rem;
  }

  .use-case-image {
    position: relative;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
  }

  .use-case-image img {
    width: 100%;
    border-radius: 1rem;
    transition: all 0.5s ease;
  }

  .use-case-image:hover img {
    transform: scale(1.03);
  }

  .decorative-circle {
    position: absolute;
    bottom: -80px;
    right: -80px;
    width: 200px;
    height: 200px;
    border-radius: 50%;
    background: linear-gradient(135deg, #f97316 0%, rgba(249, 115, 22, 0.2) 100%);
    z-index: -1;
  }

  .rounded-image {
    border-radius: 1rem;
    overflow: hidden;
  }

  /* Animation Classes */
  .animate-element {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease, transform 0.8s ease;
  }

  .animate-element.animate {
    opacity: 1;
    transform: translateY(0);
  }

  .fade-up {
    transform: translateY(50px);
  }

  .fade-in-right {
    transform: translateX(-50px);
  }

  .fade-in-left {
    transform: translateX(50px);
  }

  /* Responsive Styles */
  @media (max-width: 1024px) {
    .product-grid {
      grid-template-columns: 1fr;
      gap: 4rem;
    }

    .use-case-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .use-case-image {
      order: -1;
    }

    .excellence-section h2 {
      font-size: 2.4rem;
    }
  }

  @media (max-width: 768px) {
    .product-showcase {
      padding: 5rem 0;
    }

    .excellence-section h2 {
      font-size: 2rem;
    }

    .image-grid {
      grid-template-areas:
        "hex1"
        "hex2"
        "hex3";
      transform: translateX(0);
    }

    .hex-2 {
      margin-top: 0;
    }

    .section-header h2 {
      font-size: 2rem;
    }
  }

  @media (max-width: 480px) {
    .excellence-section h2 {
      font-size: 1.8rem;
    }

    .cta-button {
      width: 100%;
      text-align: center;
    }

    .use-case-list li {
      padding: 0.75rem 1rem;
    }

    .use-case-icon {
      width: 32px;
      height: 32px;
    }

    .use-case-list li span {
      font-size: 0.9rem;
    }
  }
</style>